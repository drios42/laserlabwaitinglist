<h1>LASER LAB WAITLIST</h1>
<section class="insert">
    <h3>Enter Personal Information</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="name">Name</label>
            <input type="text" id="name" name="name">
        </div>
        <div class="input">
            <label for="phone">Phone</label>
            <input type="text" id="phone" name="phone">
        </div>
        <div class="input">
            <label for="email">Email</label>
            <input type="text" id="email" name="email">
        </div>
        <button type="submit">Add to Waitlist</button>
    </form>
</section>
<section class="get">
    <h3>Get Data</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Name: {{ this.name }}</div>
                <!-- <div>Phone: {{ this.phone }}</div>
                <div>Email: {{ this.email }}</div>
                <div>ID: {{ this._id }}</div> -->
                <form action="/delete" method="post">
                    <div class="input">
                        <!-- <label for="id">ID</label> -->
                        <!-- <input type="text" id="id" name="id" > -->
                         <input type="hidden" name="id" value= {{this._id}}>
                    </div>
                    <button type="submit" class="delete">DELETE</button>
                </form>
                <form action="/notify" method="post">
                    <!-- <div class="input">
                        <label for="id">ID</label>
                        <input type="text" id="id" name="id">
                    </div> -->
                    <input type="hidden" name="name" value= {{this.name}}>
                    <input type="hidden" name="phone" value= {{this.phone}}>
                    <button type="submit" class="notify">NOTIFY</button>
                </form>
            </article>
        {{/each}}
    </div>
</section>
